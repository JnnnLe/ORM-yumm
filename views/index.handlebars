<h1>Burger Time!</h1>

<main>
  <div class="row">
    <div class="col-md-12">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="bu" name="name" placeholder="enter a burger name here!" autocomplete="off">
      </div>

      <button type="submit">Submit</button>

    </form>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6" id="newBurgers">
        <h2>New Burgers</h2>
        <ul> 
          {{#each burgers}}
            {{#unless isDevoured}}
              {{> burgers/burger-block eat=false}}
            {{/unless}}
          {{/each}}
        </ul>

        </div>


      <div class="col-md-6" id="oldBurgers">
        <h2>Old Burgers</h2>
        <ul> 
          {{#each burgers}}
            {{#if isDevoured}}
              {{> burgers/burger-block eat=true}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
  </div>

</main>


